algoritmo "MeuNome"

var
   nome: Caractere
   num1, num2 : real
   
   
inicio

      Escreval("Qual seu nome?")
      Leia(Nome)
      Escreval(Nome, " Escolha um número.")
      Leia(num1)
      Escreval(Nome, " Escolha outro número.")
      Leia(num2)
      Escreval(num1, " + ", num2, " = ", num1 + num2)
      





fimalgoritmo
